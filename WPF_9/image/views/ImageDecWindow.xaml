<Window x:Class="WPF_9.image.views.ImageDecWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_9.image.views"
        mc:Ignorable="d"
        Title="ImageDecWindow" Height="450" Width="681">
    <Grid>
        <Button x:Name="OpenFileButton" Content="Open file" HorizontalAlignment="Left" Margin="24,26,0,0" VerticalAlignment="Top" Height="49" Width="169" Click="OpenFileButton_Click"/>
        <TextBox x:Name="DecryptedTextBox" HorizontalAlignment="Left" Margin="220,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="430" Height="360" FontSize="18"/>
        <Button x:Name="ExitButton" Content="Close" HorizontalAlignment="Left" Margin="24,337,0,0" VerticalAlignment="Top" Height="49" Width="169" Click="ExitButton_Click"/>
        <Button x:Name="DecryptButton" Content="Decrypt" HorizontalAlignment="Left" Margin="24,185,0,0" VerticalAlignment="Top" Height="118" Width="169" Click="DecryptButton_Click"/>

    </Grid>
</Window>
